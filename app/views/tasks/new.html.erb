<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <title>Todo List</title>
</head>
<body>
    <h2>New Todo</h2>

    <%= form_with model: @task do |f| %>
    <div class="field">
        <%= f.label :Title %><br>
        <%= f.text_field :title %>
    </div>
    <div class="field">
        <%= f.label :Body %><br>
        <%= f.text_field :body %>
    </div>
    <div class="actions">
        <br><%= f.submit %>
    </div>
    <% end %>
    
    <br>
    <%= link_to "Back", tasks_path %>

</body>
</html>